<% layout('layouts/boilerplate') -%> 

    <div class="row">
        <h1 class="text-center">Edit CampGround</h1>
        <form action="/campgrounds/<%= camp._id %>/?_method=PUT " method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" value="<%= camp.title %> " type="text" id="title" placeholder="Title" name="title" required>
                <div class="invalid-feedback">
                    Title cannot be empty
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input value="<%= camp.location %> " type="text" class="form-control" id="location" name="location" placeholder="location" required>
            <div class="invalid-feedback">
                Location cannot be empty
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">$</span>
                <input type="text" value="<%= camp.price %> " name="price" class="form-control" id="price" placeholder="Price" aria-label="Price" aria-describedby="basic-addon1" required>
                <div class="invalid-feedback">
                    Price cannot be null
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input type="text" value="<%= camp.image %> " class="form-control" id="image" name="image" placeholder="enter url" required>
            <div class="invalid-feedback">
                Image URL cannot be empty
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea type="text" class="form-control" id="description" name="description" placeholder="description" required><%= camp.description %></textarea>
            <div class="invalid-feedback">
                Provide a description
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        
        <button class="btn btn-info">Submit</button>
        </form>
    </div>
    <a href="/campgrounds">Back to CampGrounds</a>